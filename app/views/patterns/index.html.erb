<p id="notice"><%= notice %></p>

<h1 class="text-center">Patterns</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Pattern</th>
      <th>Page</th>
      <th>Side</th>
      <th>Offset</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patterns.each do |pattern| %>
      <tr>
        <td><%= pattern.pattern %></td>
        <td><%= pattern.page %></td>
        <td><%= pattern.side %></td>
        <td><%= pattern.offset %></td>
        <td><%= link_to 'Show', pattern %></td>
      </tr>
    <% end %>
  </tbody>
</table>
